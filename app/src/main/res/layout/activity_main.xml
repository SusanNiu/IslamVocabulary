<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<!--    question and answer-->
    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="399dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="400dp"
        android:gravity="center"
        android:text='What is the meaning of  "Allah" ?'
        android:textColor="#006400"
        android:textSize="36sp"
        android:background="@drawable/question_background"
        android:elevation="20dp"/>
    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="399dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="400dp"
        android:gravity="center"
        android:text='God'
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:visibility="invisible"
        android:background="@drawable/answer_background"
        android:elevation="20dp"/>


<!--    the choice-->
    <TextView
        android:id="@+id/choice1"
        android:layout_width="299dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="278dp"
        android:text="Prophet"
        android:textSize="20sp"
        android:textColor="#006400"
        android:gravity="center"
        android:background="@drawable/choice_background"/>
    <TextView
        android:id="@+id/choice2"
        android:layout_width="299dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/choice_background"
        android:gravity="center"
        android:text="God"
        android:textColor="#006400"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/choice3"
        android:layout_width="299dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/choice_background"
        android:gravity="center"
        android:text="Messenger"
        android:textColor="#006400"
        android:textSize="20sp" />


<!--toggle eyes to see and unsee the choices-->
    <ImageView
        android:id="@+id/see_choices"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="42dp"
        android:src="@drawable/ic_eye1" />
    <ImageView
        android:id="@+id/unsee_choices"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="42dp"
        android:src="@drawable/ic_eye2"
        android:visibility="invisible"/>


<!--    add new questions-->
    <ImageView
        android:id="@+id/addNew"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="33dp"
        android:src="@drawable/add" />

<!--    edit the displayed question again-->
    <ImageView
        android:id="@+id/editText"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="335dp"
        android:layout_marginBottom="37dp"
        android:src="@drawable/edit" />


</RelativeLayout>